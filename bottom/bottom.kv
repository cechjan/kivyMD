#:import utils kivy.utils

BoxLayout:
    orientation:'vertical'

    MDToolbar:
        title: 'Bottom navigation'
        md_bg_color: utils.get_color_from_hex('#1d3557')
        specific_text_color: 1, 1, 1, 1

    MDBottomNavigation:
        id: navigation
        panel_color: utils.get_color_from_hex('#2a4c7d')

        MDBottomNavigationItem:
            name: 'screen 0'
            text: 'Hlavní'
            icon: 'home'

            MainScreen:

        MDBottomNavigationItem:
            name: 'screen 1'
            text: 'BMI'
            icon: 'text'

            TextScreen:

        MDBottomNavigationItem:
            name: 'screen 2'
            text: 'Formulář'
            icon: 'card-bulleted'

            FormScreen:

        MDBottomNavigationItem:
            name: 'screen 3'
            text: 'Tabulka'
            icon: 'grid'

            TableScreen:


<TextScreen>:
    name: 'textscreen'

    FloatLayout:
        canvas:
            Color:
                rgba: app.theme_cls.primary_light
            RoundedRectangle:
                pos: self.pos
                size: self.size
                radius: [10, 10, 10, 10]

        MDLabel:
            id: result
            text: 'Výsledek'
            size_hint: (0.5, 0.1)
            pos_hint: {'center_x': 0.5, 'center_y': 0.9}
            halign: 'center'
            font_style: 'H5'
            canvas.before:
                Color:
                    rgb: utils.get_color_from_hex('#e63946')
                Rectangle:
                    pos: self.pos
                    size: self.size

        BoxLayout:
            orientation: 'horizontal'
            size_hint_x: 0.8
            size_hint_y: 0.1
            pos_hint: {'center_x': 0.5, 'center_y': 0.7}
            height: self.minimum_height
            spacing: 10
            canvas.before:
                Color:
                    rgb: utils.get_color_from_hex('#a8dadc')
                Rectangle:
                    pos: self.pos
                    size: self.size

            MDLabel:
                text: 'Váha'
                halign: 'center'
                canvas.before:
                    Color:
                        rgb: utils.get_color_from_hex('#457b9d')
                    Rectangle:
                        pos: self.pos
                        size: self.size

            MDTextField:
                id: vaha
                mode: 'fill'
                hint_text: "Zde zadejte váhu v kg"
                color_mode: 'custom'
                line_color_focus: utils.get_color_from_hex('#1d3557')


        BoxLayout:
            orientation: 'horizontal'
            size_hint_x: 0.8
            size_hint_y: 0.1
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            height: self.minimum_height
            spacing: 10
            canvas.before:
                Color:
                    rgb: utils.get_color_from_hex('#a8dadc')
                Rectangle:
                    pos: self.pos
                    size: self.size

            MDLabel:
                text: 'Výška'
                halign: 'center'
                canvas.before:
                    Color:
                        rgb: utils.get_color_from_hex('#457b9d')
                    Rectangle:
                        pos: self.pos
                        size: self.size

            MDTextField:
                id: vyska
                mode: 'fill'
                hint_text: "Zde zadejte výšku v cm"
                color_mode: 'custom'
                line_color_focus: utils.get_color_from_hex('#1d3557')

        MDRaisedButton:
            text: "Vypočítej"
            md_bg_color: 0.5,0.5, 0.8, 1
            pos_hint: {'center_x': 0.5, 'center_y': 0.1}
            on_press:
                print('Stisknuto')
                root.ids.result.text = str(round(float(root.ids.vaha.text) / ((float(root.ids.vyska.text)/100) ** 2), 2))


